<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_marginBottom="-25dp"
            android:backgroundTint="@color/add_to_cart_menu_background"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button_add_to_cart"
                android:layout_width="170dp"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/button_add_to_cart_background"
                android:elevation="2dp"
                android:fontFamily="@font/poppins_semibold"
                android:foreground="?actionBarItemBackground"
                android:paddingStart="90dp"
                android:text="@string/button_add_to_cart"
                android:textSize="8sp"
                android:translationZ="2dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/text_view_sum_in_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="134dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="$ 2,500"
                android:textColor="@color/text_sum_on_add_to_cart_button"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Quantity:"
                android:textColor="@color/text_on_background_grey"
                android:textSize="9sp" />

            <ImageButton
                android:id="@+id/image_button_quantity_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/ic_button_minus"
                android:foreground="?actionBarItemBackground"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/image_button_quantity_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="83dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/ic_button_plus"
                android:foreground="?actionBarItemBackground"
                tools:ignore="ContentDescription" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_bottom_tabs"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginBottom="-23dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/image_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_home"
            android:elevation="2dp"
            android:foreground="?actionBarItemBackground"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_view_bottom_tabs"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_tab_bar_button_backround_round"
            android:elevation="1dp"
            android:foreground="?actionBarItemBackground"
            android:translationZ="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_view_bottom_tabs"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/image_button_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_heart"
            android:elevation="1dp"
            android:foreground="?actionBarItemBackground"
            android:translationZ="1dp"
            app:layout_constraintEnd_toStartOf="@id/image_button_cart"
            app:layout_constraintStart_toStartOf="@id/image_button_home"
            app:layout_constraintTop_toTopOf="@id/card_view_bottom_tabs"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/image_button_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_cart"
            android:elevation="1dp"
            android:foreground="?actionBarItemBackground"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_view_bottom_tabs"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/image_button_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_messages"
            android:elevation="1dp"
            android:foreground="?actionBarItemBackground"
            android:translationZ="1dp"
            app:layout_constraintEnd_toStartOf="@id/image_button_profile"
            app:layout_constraintStart_toEndOf="@id/image_button_cart"
            app:layout_constraintTop_toTopOf="@id/card_view_bottom_tabs"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/image_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_profile"
            android:elevation="1dp"
            android:foreground="?actionBarItemBackground"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_view_bottom_tabs"
            tools:ignore="ContentDescription" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/card_view_add_to_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_background">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_detail_product_activity"
                    android:layout_width="328dp"
                    android:layout_height="279dp"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/app_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_product_images"
                    android:layout_width="225dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/app_background"
                    app:tabIndicatorHeight="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_pager_detail_product_activity" />

                <ImageButton
                    android:id="@+id/image_button_back_detail_product_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/ic_arrow_back_2"
                    android:elevation="1dp"
                    android:translationZ="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_view_group_buttons_background_detail_product_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="304dp"
                    android:layout_marginBottom="28dp"
                    android:elevation="1dp"
                    android:src="@drawable/group_buttons_background"
                    android:translationZ="1dp"
                    app:layout_constraintBottom_toBottomOf="@id/view_pager_detail_product_activity"
                    app:layout_constraintStart_toStartOf="@id/view_pager_detail_product_activity"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/button_add_to_favorite_detail_product_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="316dp"
                    android:layout_marginBottom="93dp"
                    android:background="@drawable/ic_heart_dark"
                    android:elevation="2dp"
                    android:foreground="?actionBarItemBackground"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/view_pager_detail_product_activity"
                    app:layout_constraintStart_toStartOf="@id/view_pager_detail_product_activity"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/button_share_detail_product_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="316dp"
                    android:layout_marginBottom="45dp"
                    android:background="@drawable/ic_share"
                    android:elevation="2dp"
                    android:foreground="?actionBarItemBackground"
                    android:translationZ="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/view_pager_detail_product_activity"
                    app:layout_constraintStart_toStartOf="@id/view_pager_detail_product_activity"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_view_detail_product_name"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="New balance Sneakers"
                    android:textColor="@color/text_title"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tab_layout_product_images" />

                <TextView
                    android:id="@+id/text_view_detail_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="$ 22.50"
                    android:textColor="@color/text_title"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tab_layout_product_images" />

                <TextView
                    android:id="@+id/text_view_product_description"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="38dp"
                    android:fontFamily="@font/poppins"
                    android:text="Features waterproof, fire, air resistant shoes. all changed when the country of fire attacked"
                    android:textColor="@color/text_on_background_grey"
                    android:textSize="9sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_detail_product_price" />

                <TextView
                    android:id="@+id/text_view_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="77dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text=" 3.9"
                    android:textColor="@color/text_title"
                    android:textSize="9sp"
                    app:drawableStartCompat="@drawable/ic_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_detail_product_price" />

                <TextView
                    android:id="@+id/text_view_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="77dp"
                    android:fontFamily="@font/poppins"
                    android:text="(4000 reviews)"
                    android:textColor="@color/text_on_background_grey"
                    android:textSize="9sp"
                    app:layout_constraintStart_toEndOf="@id/text_view_ratio"
                    app:layout_constraintTop_toBottomOf="@id/text_view_detail_product_price" />

                <TextView
                    android:id="@+id/text_view_colors_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Color:"
                    android:textColor="@color/text_color_title"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_ratio" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_color1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="11dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_colors_title">

                    <TextView
                        android:id="@+id/text_view_color_white"
                        android:layout_width="34dp"
                        android:layout_height="26dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_color2"
                    android:layout_width="34dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="11dp"
                    android:backgroundTint="@color/text_color_title"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="9dp"
                    app:layout_constraintStart_toEndOf="@id/card_view_color1"
                    app:layout_constraintTop_toBottomOf="@id/text_view_colors_title" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_color3"
                    android:layout_width="34dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="11dp"
                    android:backgroundTint="@color/text_color_title"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="9dp"
                    app:layout_constraintStart_toEndOf="@id/card_view_color2"
                    app:layout_constraintTop_toBottomOf="@id/text_view_colors_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>