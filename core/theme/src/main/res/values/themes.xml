<resources>
    <!-- Base application theme. -->
    <style name="Theme.TestApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewTitle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EditTextField">
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:background">@drawable/edit_text_fragment_sign_in</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppBarTitleFragmentProfile" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ButtonProfileItem">
        <item name="android:layout_width">297.5dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:backgroundTint">@color/app_background</item>
        <item name="android:drawableLeft">@drawable/ic_pocket</item>
        <item name="android:drawableRight">@drawable/ic_arrow_forward</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/text_on_profile_fragment_items</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_category</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Theme.TestApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewViewAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">11dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:text">View all</item>
        <item name="android:textColor">@color/text_on_background_grey</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextViewRecyclerViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">11dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_on_profile_fragment_items</item>
    </style>

    <style name="EditTextInputError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:text">@string/empty_field_error</item>
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="Theme.TestApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>